<% if flash[:alert].class == Array %>
  <% flash[:alert].each do |m| %>
    <li><strong><%= m %></strong></li>
  <% end %>
<% elsif flash[:alert].class == String %>
  <li><strong><%= flash[:alert] %></strong></li>
<% end %>

<h1>Sign Up</h1>

<%= form_for :user, url: signup_path do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Sign Up" %>
<% end %>

<p><%= link_to "Log In", login_path %></p>